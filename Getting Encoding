firebase=pyrebase.initialize_app(Config)

db=firebase.database()
known_faces=db.child("RegisteredPerson/").get()

key=known_faces.val()
for phone in key:
#this below loop should be executed as number of images we take. default i have taken 5.
  path="RegisteredPerson/"+phone+"/encoding/"
  obj=db.child(path).get()
  size=len(obj.val())
  for i in range(size):
    path="RegisteredPerson/"+phone+"/encoding/"+str(i)
    encodings=db.child(path).get()
    print(encodings.val())


